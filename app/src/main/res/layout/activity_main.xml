<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4EFFE57F"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/school1"
        android:id="@+id/imege"
        android:layout_marginLeft="22dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WellCome"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_below="@id/imege"
        android:id="@+id/tex"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/tex"
    android:layout_above="@id/bottomnavigation"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/row1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:weightSum="2"
            android:layout_below="@id/tex"


            >


            <androidx.cardview.widget.CardView
                android:id="@+id/school"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="15dp"
                android:layout_weight="1"

                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/school1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hospital"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="20dp"
                android:layout_marginLeft="15dp"
                app:cardMaxElevation="15dp"
                android:layout_weight="1"

                >

                <ImageView

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/hospital"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospital"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:weightSum="2"
            android:layout_below="@id/row1">


            <androidx.cardview.widget.CardView
                android:id="@+id/namta"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="15dp"
                android:layout_weight="1"

                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="35dp"
                    android:src="@drawable/namta"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Namta"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/media"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="20dp"
                android:layout_marginLeft="15dp"
                app:cardMaxElevation="15dp"
                android:layout_weight="1"

                >

                <ImageView

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/media"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:weightSum="2"
            android:layout_below="@id/row2">


            <androidx.cardview.widget.CardView
                android:id="@+id/airport1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="15dp"
                android:layout_weight="1"

                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/airport"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Airport"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/restaurant1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="20dp"
                android:layout_marginLeft="15dp"
                app:cardMaxElevation="15dp"
                android:layout_weight="1"

                >

                <ImageView

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/restaurant"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    />


            </androidx.cardview.widget.CardView>


        </LinearLayout>






    </LinearLayout>

</ScrollView>





    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:id="@+id/frame"
        />



<com.etebarian.meowbottomnavigation.MeowBottomNavigation
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:mbn_backgroundBottomColor="#FFEA00"

    android:id="@+id/bottomnavigation"/>









</RelativeLayout>